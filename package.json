{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "API em NodeJS com Clean Architecture e TDD - curso Rodrigo Manguinho",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "npm test -- --verbose --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "test:ci": "npm test -- --coverage --silent",
    "prepare": "husky install"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielrnascimento/clean-node-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabrielrnascimento/clean-node-api/issues"
  },
  "homepage": "https://github.com/gabrielrnascimento/clean-node-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "standard": "^17.0.0",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "@types/jest": "^29.0.3",
    "@types/validator": "^13.7.6",
    "bcrypt": "^5.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.10.0",
    "validator": "^13.7.0"
  }
}
